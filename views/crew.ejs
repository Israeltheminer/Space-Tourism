<main class="mx-[8rem] lg:mx-[6rem] md:mx-[4rem] sm:mx-[2rem]">
   <h5 class="tracking-widest my-[3rem]"><span class="opacity-50 mr-5">02</span>MEET YOUR CREW</h5>
   <div class="grid grid-cols-2 gap-[4rem] mx-auto lg:block">
      <div class="grid-items">
         <div class="mt-[6rem] mb-[5rem] lg:text-center">
            <h4 id="crewTitle" class="opacity-50 leading-10 mb-1">COMMANDER</h4>
            <h3 id="crewName" class="mb-3">DOUGLAS HURLEY</h3>
